---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact | Michaeldevops" description="Contact MichaelDevOps.">
	<main class="wrapper page stack gap-20">
		<section class="hero">
			<div class="stack gap-8">
				<h1 class="hero-title">Contact</h1>
				<p class="labeled">
					<!-- Hero section -->
					Reach out for backend engineering, DevOps support, or automation work.
				</p>
				<p class="labeled">
					<!-- Text box under hero -->
					Email is the fastest way to connect and discuss project needs.
				</p>
			</div>
			<div class="hero-panel stack gap-8">
				<p class="labeled">
					<!-- Text box under hero -->
					Email: michealdevops@gmail.com
				</p>
				<p class="labeled">
					<!-- Text box under hero -->
					Location: Nigeria (open to remote work)
				</p>
			</div>
		</section>

		<section class="section">
			<div class="section-header">
				<h2>What to Send</h2>
				<p class="labeled">
					<!-- Text box under hero -->
					Share the project scope, timeline, and any current deployment or infrastructure constraints.
				</p>
				<p class="labeled">
					<!-- Text box under hero -->
					I respond with clear next steps and a practical plan for delivery.
				</p>
			</div>
		</section>
	</main>
</BaseLayout>


